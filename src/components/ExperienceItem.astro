---
interface Props {
  title: string;
  description: string;
  date: string;
  link?: string;
}

const { title, description, date, link } = Astro.props;
---

<div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 bg-teal-500"></div>
<time
  class="mb-1 text-md font-normal leading-none dark:text-teal-100 text-teal-800"
  >{date}</time
>
<h3 class="text-lg font-semibold dark:text-teal-400 text-teal-800">
  {title}
</h3>
<p
  class="mb-4 text-base font-normal text-teal-600 dark:text-white/80 text-pretty"
>
  {description}
</p>
{
  link && (
    <a
      href="#"
      class="inline-flex items-center px-4 py-2 text-sm font-medium text-teal-900 bg-teal-100 border border-teal-200 rounded-lg hover:bg-teal-300 hover:text-teal-900 focus:z-10 focus:ring-4 focus:outline-none focus:ring-teal-400 focus:text-teal-800 dark:bg-teal-950 dark:text-teal-500 dark:border-teal-600 dark:hover:text-white dark:hover:bg-teal-800 dark:focus:ring-teal-600"
    >
      Learn more
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
