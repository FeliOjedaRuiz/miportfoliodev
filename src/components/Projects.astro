---
import GitHub from "./icons/GitHub.astro";
import Tailwind from "./icons/Tailwind.astro";
import React from "./icons/React.astro";
import Vite from "./icons/Vite.astro";
import LinkButton from "./LinkButton.astro";
import Link from "./icons/Link.astro";

const TAGS = {
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-white/50 dark:bg-teal-800/50 text-[#003159] dark:text-white/90 dark:border-none border border-sky-600",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-white/50 dark:bg-teal-800/50 text-[#003159] dark:text-white/90 dark:border-none border border-cyan-600",
    icon: React,
  },
  VITE: {
    name: "Vite",
    class: "bg-white/50 dark:bg-teal-800/50 text-[#8604c3] dark:text-white/90 dark:border-none border border-[#BD34FE]",
    icon: Vite,
  }
};

const PROJECTS = [
  {
    title: "La Vin Nails App",
    description:
      "Esta app web fue desarrollada para la gestion de citas de un estudio de manicura, cuenta con distintas funcionalidades según si el usuario es cliente o administrador. Listado de servicios, agenda de citas disponibles, tarjeta de fidelidad, enlaces a whatsapp, emails de notificación, etc...",
    link: "https://la-vin-nails-app.fly.dev/",
    github: "https://github.com/FeliOjedaRuiz/la-vin-nails-web-react",
    image: "/projects/laVinNailsMockup.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "Jurado App",
    description:
      "App web para votación en concursos por jurado, permite crear eventos y administrarlos, agregar grupos, categoryas y jurados. Y los usuarios invitados como jurado a un evento pueden puntuar a los grupos en las diferentes categorias, generando una sumatoria total de puntos que puede ser obtenida por el usuario",
    link: "https://jurado-app.fly.dev/",
    github: "https://github.com/FeliOjedaRuiz/jurado-app",
    image: "/projects/juradoAppMockup.webp",
    tags: [TAGS.VITE, TAGS.REACT, TAGS.TAILWIND],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-teal-800 lg:hover:border-teal-700 lg:hover:bg-teal-800/50">
            <img
              alt={`Screenshots de ${title}`}
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-pink-700 dark:text-white">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-teal-800 dark:text-gray-300">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
