---
const personalImageAlt = "Feliciano Ojeda Ruiz";
import Badge from "./Badge.astro";
import SocialPill from "./SocialPill.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import MailIcon from "./icons/MailIcon.astro";
---

<div class="">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/felicianoojeda.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/feliciano-ojeda-ruiz"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105 font-medium"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-teal-900 dark:text-white text-3xl md:text-5xl lg:text-6xl font-bold flex flex-row gap-x-4"
  >
    ¡Hola!
  </h1>
  <h1
    class="text-teal-900 dark:text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-4 md:pb-6 lg:pb-8"
  >
    Soy Feliciano Ojeda Ruiz
  </h1>
  <h2 class="text-wrap">
    <span
      class="text-pink-600 dark:text-lime-400 text-xl lg:text-2xl font-medium"
      >Desarrollador Web y Diseñador Gráfico.</span
    ><p
      class="text-teal-900 dark:text-white opacity-85 text-pretty text-lg lg:text-xl leading-tight"
    >
      Argentino en Granada, España. Me encanta ayudar creando soluciones
      prácticas e innovadoras.
    </p>
  </h2>

  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="https://www.linkedin.com/in/feliciano-ojeda-ruiz">
      <LinkedInIcon class="size-4 md:size-5 lg:size-6" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/FeliOjedaRuiz">
      <GitHubIcon class="size-4 md:size-5 lg:size-6" />
      GitHub
    </SocialPill>
    <SocialPill href="https://github.com/FeliOjedaRuiz">
      <MailIcon class="size-4 md:size-5 lg:size-6" />
      feliojedaruiz@gmail.com
    </SocialPill>
  </nav>
</div>
