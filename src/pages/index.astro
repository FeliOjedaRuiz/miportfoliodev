---
import Layout from "../layouts/Layout.astro";
import LinkedIn from "../components/icons/LinkedInIcon.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Portfolio de Feliciano Ojeda Ruiz - Desarrollador y Programador Web."
  description="Contrata a Feliciano para desarollar tu página o aplicación web."
>
  <main class="px-4">
    <SectionContainer class="py-36 pb-28">
      <h1 class="text-white text-3xl md:text-5xl lg:text-6xl font-bold flex flex-row gap-x-4">
        ¡Hola!
      </h1>
      <h1 class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-4 md:pb-6 lg:pb-8">
        Soy Feliciano Ojeda Ruiz <a
          href="https://www.linkedin.com/in/feliciano-ojeda-ruiz"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
          ><Badge>Disponible para trabajar</Badge></a
        >
      </h1>
      <h2 class="text-wrap max-w-[700px]">
        <span class="text-teal-400 text-xl lg:text-2xl font-medium"
          >Desarrollador Web y Diseñador Gráfico.</span
        ><p class="opacity-85 text-pretty text-lg lg:text-xl leading-tight"
        > Argentino en Granada, España. Me encanta ayudar, creando soluciones.</p
        >
      </h2>

      <nav class="flex flex-wrap gap-4 mt-8">
        <SocialPill href="https://www.linkedin.com/in/feliciano-ojeda-ruiz">
          <LinkedIn class="size-4 md:size-5 lg:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/FeliOjedaRuiz">
          <GitHubIcon class="size-4 md:size-5 lg:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="https://github.com/FeliOjedaRuiz">
          <MailIcon class="size-4 md:size-5 lg:size-6" />
          feliojedaruiz@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class="text-md md:text-xl lg:text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size:5 md:size-6 lg:size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="proyectos" class="mt-24">
      <h2 class="text-md md:text-xl lg:text-2xl  font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size:5 md:size-6 lg:size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
