---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import Projects from "../components/Projects.astro";
import Hola from "../components/Hola.astro";
import TitleSection from "../components/TitleSection.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout
  title="Portfolio de Feliciano Ojeda Ruiz - Desarrollador y Programador Web."
  description="Contrata a Feliciano para desarollar tu página o aplicación web."
>
  <main class="px-6">
    <SectionContainer id="hola" class="py-20 sm:py-36 pb-28">
      <Hola />
    </SectionContainer>

    <div class="space-y-24">

    <SectionContainer id="proyectos" >
      <TitleSection>
        <CodeIcon class="size:7 md:size-8 lg:size-9" />
        Proyectos
      </TitleSection>
      <Projects />
    </SectionContainer>

    <SectionContainer id="experiencia">
      <TitleSection>
        <Briefcase class="size:7 md:size-8 lg:size-9" />
        Experiencia Laboral
      </TitleSection>
      <Experience />
    </SectionContainer>

    <SectionContainer id="sobre-mi" class="mt-24">
      <TitleSection>
        <ProfileCheck class="size:7 md:size-8 lg:size-9" />
        Sobre mí
      </TitleSection>
      <AboutMe />
    </SectionContainer>
  </div>
  </main>
</Layout>
