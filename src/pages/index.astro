---
import Layout from "../layouts/Layout.astro";
import LinkedIn from "../components/icons/LinkedInIcon.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
import Hola from "../components/Hola.astro";
---

<Layout
  title="Portfolio de Feliciano Ojeda Ruiz - Desarrollador y Programador Web."
  description="Contrata a Feliciano para desarollar tu página o aplicación web."
>
  <main class="px-4">
    <SectionContainer class="py-36 pb-28">
      <Hola>        
      </Hola>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class="text-md md:text-xl lg:text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size:5 md:size-6 lg:size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="proyectos" class="mt-24">
      <h2 class="text-md md:text-xl lg:text-2xl  font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size:5 md:size-6 lg:size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
